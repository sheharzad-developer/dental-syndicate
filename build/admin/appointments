<script>
document.getElementById('emailForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const email = document.getElementById('email').value;
    const resultDiv = document.getElementById('emailResult');
    const submitBtn = e.target.querySelector('button[type="submit"]');
    
    // Show loading state
    submitBtn.textContent = 'Sending...';
    submitBtn.disabled = true;
    resultDiv.style.display = 'none';
    
    try {
        const formData = new FormData();
        formData.append('email', email);
        
        const response = await fetch('/admin/send-appointment-list', {
            method: 'POST',
            body: formData
        });
        
        const result = await response.json();
        
        resultDiv.textContent = result.message;
        resultDiv.className = `result-message ${result.success ? 'success' : 'error'}`;
        resultDiv.style.display = 'block';
        
        if (result.success) {
            document.getElementById('email').value = '';
        }
    } catch (error) {
        resultDiv.textContent = 'Error sending email. Please try again.';
        resultDiv.className = 'result-message error';
        resultDiv.style.display = 'block';
    } finally {
        submitBtn.textContent = 'Send List via Email';
        submitBtn.disabled = false;
    }
});
</script>

